{
  "manifest_version": 2,
  "name": "brocli",
  "description": "brocli is a Chrome extension that turns Chrome's omnibar into a command line interface for navigating the web",
  "version": "2018.1.0617.1",
  "version_name": "v1.0 (Beta)",
  "omnibox": { "keyword" : "b" },
  "icons": {
    "128": "icon.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["helpers.js", "optparse.js", "config.js", "urls.js", "commands.js", "events.js"],
      "persistent": true
  },
  "content_scripts": [
    {
    "matches": ["https://*/*", "http://*/*"],
    "js": ["jquery.js"],
    "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "storage",
    "webNavigation"
  ]
}