{
  "manifest_version": 2,
  "name": "brocli",
  "description": "brocli is a Chrome extension that turns Chrome's omnibar into a command line interface for navigating the web",
  "version": "1.2",
  "omnibox": { "keyword" : "b" },
  "icons": {
    "128": "icon.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["helpers.js", "optparse.js", "config.js", "ac-urls.js", "commands.js", "background.js"],
      "persistent": true
  },
  "commands": {
    "-l_customers": {
      "suggested_key": {
        "default": "Alt+J",
        "windows": "Alt+J",
        "mac": "Alt+J"
        },
        "description": "Customers",
        "global": true
    },
        "-l_customers_-t": {
        "description": "Customers (New Tab)"
    },
    "-l_orders": {
      "suggested_key": {
        "default": "Alt+K",
        "windows": "Alt+K",
        "mac": "Alt+K"
        },
        "description": "Order"
    },
        "-l_orders_-t": {
        "description": "Orders (New Tab)"
    },
      "-l_products": {
      "suggested_key": {
        "default": "Alt+L",
        "windows": "Alt+L",
        "mac": "Alt+L"
        },
        "description": "Products"
    },
      "-l_products_-t": {
        "description": "Products (New Tab)"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "storage",
    "webNavigation"
  ],
  "optional_permissions": ["activeTab"]
}