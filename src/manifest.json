{
  "manifest_version": 2,
  "name": "brocli",
  "description": "Turns chrome's address bar into a command line interface for navigating the web and rapidly performing common IT related tasks",
  "version": "2018.1.0617.1",
  "version_name": "v1.0 (Beta)",
  "omnibox": { "keyword" : "b" },
  "icons": {
    "128": "icon.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Open brocli terminal"
  },
  "background": {
      "scripts": ["helpers.js", "optparse.js", "config.js", "urls.js", "commands.js", "events.js"],
      "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Opens the brocli terminal"
    }
  },
  "content_scripts": [
    {
    "matches": ["https://*/*", "http://*/*"],
    "js": ["jquery.js"],
    "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "storage",
    "webNavigation"
  ]
}