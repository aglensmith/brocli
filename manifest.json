{
  "manifest_version": 2,
  "name": "brocli",
  "description": "brocli is a Chrome extension that turns Chrome's omnibar into a command line interface for navigating the web",
  "version": "1.1",
  "omnibox": { "keyword" : "b" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["background.js", "optparse.js", "commands.js", "helpers.js", "ac-urls.js", "config.js"],
      "persistent": false
  },
  "commands": {
    "-l_orders": {
      "suggested_key": {
        "default": "Alt+O",
        "windows": "Alt+O",
        "mac": "Alt+O"
        },
        "description": "Go to order list"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "optional_permissions": ["activeTab"]
}